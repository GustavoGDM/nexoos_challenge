<div class="loan-form">
  <%= form_with do |f| %>
    <label for="">Valor do Emprestimo</label>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">R$</span>
      </div>
      <%= f.number_field :amount, class:"form-control" %>
      <div class="input-group-append">
        <span class="input-group-text">.00</span>
      </div>
    </div>
    <div class="form-group">
      <label for="">Taxa <small> %a.m.</small></label>
      <%= f.text_field :monthly_rate, class:"form-control", disabled: true, value:(@loan.monthly_rate*100 )%>
    </div>
    <div class="form-group">
      <label for="">Taxa</label>
      <%= f.select :installments,(1..60).map{|n| n}, {}, {class:"custom-select"}%>
    </div>
    <div class="form-group">
      <%= f.check_box :accept_terms %>
      <label class="form-check-label" for="accept_terms">
        Aceito os termos da solicitação de credito
      </label>
    </div>
    <%end%>
    <%= link_to 'Proxima etapa', new_loan_applicant_path, class:"btn btn-primary disabled", id:"next-step" %>
</div>